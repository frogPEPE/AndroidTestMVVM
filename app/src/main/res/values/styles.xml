<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.ArticleTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">@dimen/Article_View_Separate_HorizontalMargin</item>
        <item name="android:layout_marginEnd">@dimen/Article_View_Separate_HorizontalMargin</item>
    </style>

    <style name="VerticalSeparateView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">@dimen/Article_View_Separate_HorizontalMargin</item>
        <item name="android:layout_marginRight">@dimen/Article_View_Separate_HorizontalMargin</item>
        <item name="android:layout_marginTop">@dimen/Article_View_Separate_VerticalMargin</item>
        <item name="android:layout_marginBottom">@dimen/Article_View_Separate_VerticalMargin</item>
        <item name="android:background">#07c9ff</item>
    </style>

    <style name="TextView.ArticleSection">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#00a04d</item>
    </style>

    <style name="TextView.CreatedTime">
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#9b9fa5</item>
    </style>

</resources>
